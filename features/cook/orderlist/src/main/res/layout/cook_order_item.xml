<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_gray">

    <TextView
        android:id="@+id/dish_name_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dish_name_format"
        android:padding="@dimen/padding_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Theme.InteractiveOrderingSystem.MainTitleText"/>

    <TextView
        android:id="@+id/dish_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stub"
        android:paddingHorizontal="@dimen/padding_20"
        app:layout_constraintStart_toEndOf="@id/dish_name_weight"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Theme.InteractiveOrderingSystem.BoldNumberText"/>

    <TextView
        android:id="@+id/dish_time_cooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_20"
        android:text="@string/stub"
        android:textColor="@color/white_gray"
        android:background="@color/green"
        app:layout_constraintStart_toEndOf="@id/dish_status"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Theme.InteractiveOrderingSystem.BoldNumberText"/>

    <ImageButton
        android:id="@+id/delete_dish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:src="@drawable/ic_add_55"
        android:layout_margin="@dimen/margin_15"
        app:layout_constraintStart_toEndOf="@id/dish_time_cooking"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>