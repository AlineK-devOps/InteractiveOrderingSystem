<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Theme.InteractiveOrderingSystem.CardViewBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/padding_5"
        android:paddingHorizontal="@dimen/padding_5"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/vacation_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                style="@style/Theme.PersonalCabinet.CardViewText"/>

            <TextView
                android:id="@+id/vacation_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                style="@style/Theme.PersonalCabinet.CardViewText"/>
        </FrameLayout>

        <TextView
            android:id="@+id/period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginTop="@dimen/margin_10"
            style="@style/Theme.PersonalCabinet.CardViewTitle"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>