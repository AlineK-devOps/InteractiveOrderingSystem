<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.InteractiveOrderingSystem"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Default background color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/blue_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item tools:targetApi="28"
            name="android:statusBarColor">?attr/colorOnPrimary
        </item>
        <item tools:targetApi="23"
            name="android:windowLightStatusBar">true
        </item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.InteractiveOrderingSystem.ToolbarTableNumberText"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_35</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_gray</item>
    </style>

    <style name="Theme.InteractiveOrderingSystem.ToolbarImageButtonText"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:paddingHorizontal">@dimen/padding_40</item>
    </style>

</resources>